<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OMTools"
        Height="270" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFC"
        WindowStyle="None">

    <StackPanel Margin="10">
        <!-- Header -->
        <Grid Height="30" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Parte central -->
            <TextBlock Text="Excel Sheets"
               Foreground="#333333"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Margin="5,0,0,0"/>

            <!-- Título -->
            <TextBlock Text="OMTools"
               Foreground="#333333"
               FontWeight="Bold"
               VerticalAlignment="Center"
               Margin="5,0,0,0"/>

            <!-- Botón Close -->
            <Button Content="✕"
            Width="29" Height="22"
            Background="#E4E4E7"
            Foreground="#333333"
            BorderBrush="#CCCCCC"
            FontWeight="Bold"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,5,0"
            Click="Close_Click"/>
        </Grid>

        <!-- Main content -->

        <!-- Title Block -->
        <DockPanel Margin="10,5,0,0">
            <TextBlock Text="Title Block Type:"
               FontWeight="Bold"
               Foreground="#222"
               Width="130"
               VerticalAlignment="Center"
               DockPanel.Dock="Left"/>
            <ComboBox Width="230" SelectedIndex="0" x:Name="UI_combobox">
                <ComboBoxItem Content="A1 Horizontal"/>
            </ComboBox>
        </DockPanel>

        <!-- Excel File -->
        <DockPanel Margin="10,10,0,0">
            <TextBlock Text="Excel File:"
               FontWeight="Bold"
               Foreground="#222"
               Width="130"
               VerticalAlignment="Center"
               DockPanel.Dock="Left"/>
           <Grid Width="230">
                <Button Content="Browse..." Click="UI_Browse"
                Width="95"
                Background="#E8F0FE"
                Foreground="#333"
                BorderBrush="#BFD6FF"
                Cursor="Hand"
                HorizontalAlignment="Left" Height="20" VerticalAlignment="Top"/>
            </Grid>
        </DockPanel>
        <!-- Index Sheet Excel -->
        <DockPanel Margin="10,10,0,0">
            <TextBlock Text="Excel Index Sheet:"
               FontWeight="Bold"
               Foreground="#222"
               Width="130"
               VerticalAlignment="Center"
               DockPanel.Dock="Left"/>
            <TextBox  TextWrapping="Wrap"  x:Name="UI_text"
                             Text="1"
                             Width="230"/>
        </DockPanel>
        <!-- Index Sheet Excel -->
        <Border Background="#FFF8E1"
        BorderBrush="#FFECB3"
        BorderThickness="1"
        CornerRadius="5"
        Margin="10,15,10,0"
        Padding="8">
            <TextBlock Text="Note: In Excel, use Column 0 for Sheet Number and Column 1 for Sheet Name."
               Foreground="#555"
               FontStyle="Italic"
               FontSize="12"
               TextWrapping="Wrap"/>
        </Border>
        <!--Submit button-->
        <Button  Margin="10" Content="Submit" Width="100" Click="Close_Click" />

        <!-- Footer -->
        <Grid  Height="30" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Version: 1.0"
                       Foreground="#666666"
                       FontSize="11"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="Support OMTools"
                       Foreground="#0078D7"
                       FontWeight="Bold"
                       FontSize="11"
                       Cursor="Hand"
                       HorizontalAlignment="Right"/>

        </Grid>

    </StackPanel>
</Window>
